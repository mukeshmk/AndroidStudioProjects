<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/activity_main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.admin.bookshelf.Main2Activity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/a"
            android:id="@+id/bimg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            />



        <TextView
            android:id="@+id/bname1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:layout_below="@+id/bimg"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/bauthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sdfdf"
            android:textSize="26sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="normal|italic"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/bname1"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/bprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sdfdsf"
            android:textSize="32sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_blue_light"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="false"
            android:layout_below="@+id/bauthor"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/add"
            android:text="Add to Cart"
            android:layout_below="@+id/bprice"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="195dp"
            android:id="@+id/btm"
            android:text="Back to Menu"
            android:layout_below="@+id/bprice"/>


    </RelativeLayout>
</ScrollView>