<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mk.calcapp.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:hint="Calculator"
        android:height="100dp"
        android:text=""
        android:textSize="50dp"
        android:textAlignment="viewEnd"
        android:id="@+id/disp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="4"
        android:layout_marginTop="150dp">
        <Button
            android:layout_row="0"
            android:layout_column="0"
            android:text="mc"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/mc"/>
        <Button
            android:layout_row="0"
            android:layout_column="1"
            android:text="m+"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/mp"/>
        <Button
            android:layout_row="0"
            android:layout_column="2"
            android:text="m-"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/mm"/>
        <Button
            android:layout_row="0"
            android:layout_column="3"
            android:text="mr"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/mr"/>
        <Button
            android:layout_row="1"
            android:layout_column="0"
            android:text="C"
            android:id="@+id/c"/>
        <Button
            android:layout_row="1"
            android:layout_column="1"
            android:text="+/-"
            android:background="#663300"
            android:id="@+id/pm"/>
        <Button
            android:layout_row="1"
            android:layout_column="2"
            android:text="/"
            android:background="#663300"
            android:id="@+id/div"/>
        <Button
            android:layout_row="1"
            android:layout_column="3"
            android:text="*"
            android:background="#663300"
            android:id="@+id/mul"/>
        <Button
            android:layout_row="2"
            android:layout_column="0"
            android:text="7"
            android:id="@+id/d7"/>
        <Button
            android:layout_row="2"
            android:layout_column="1"
            android:text="8"
            android:id="@+id/d8"/>
        <Button
            android:layout_row="2"
            android:layout_column="2"
            android:text="9"
            android:id="@+id/d9"/>
        <Button
            android:layout_row="2"
            android:layout_column="3"
            android:text="-"
            android:background="#663300"
            android:id="@+id/min"/>
        <Button
            android:layout_row="3"
            android:layout_column="0"
            android:text="4"
            android:id="@+id/d4"/>
        <Button
            android:layout_row="3"
            android:layout_column="1"
            android:text="5"
            android:id="@+id/d5"/>
        <Button
            android:layout_row="3"
            android:layout_column="2"
            android:text="6"
            android:id="@+id/d6"/>
        <Button
            android:layout_row="3"
            android:layout_column="3"
            android:text="+"
            android:background="#663300"
            android:id="@+id/pul"/>
        <Button
            android:layout_row="4"
            android:layout_column="0"
            android:text="1"
            android:id="@+id/d1"/>
        <Button
            android:layout_row="4"
            android:layout_column="1"
            android:text="2"
            android:id="@+id/d2"/>
        <Button
            android:layout_row="4"
            android:layout_column="2"
            android:text="3"
            android:id="@+id/d3"/>
        <Button
            android:layout_row="4"
            android:layout_column="3"
            android:layout_rowSpan="2"
            android:height="95dp"
            android:text="="
            android:background="#ff9900"
            android:id="@+id/eql"/>
        <Button
            android:layout_row="5"
            android:layout_column="0"
            android:text="0"
            android:layout_columnSpan="2"
            android:width="175dp"
            android:id="@+id/d0"/>
        <Button
            android:layout_row="5"
            android:layout_column="2"
            android:text="."
            android:id="@+id/dot"/>
    </GridLayout>

</RelativeLayout>
